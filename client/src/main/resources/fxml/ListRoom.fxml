<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.shot_tank.controller.ListRoomController">
    
    <!-- TOP: Menu button -->
    <top>
        <HBox alignment="TOP_RIGHT" spacing="10" style="-fx-padding: 10;">
            <Button text="Menu" onAction="#onMenuClicked"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- CENTER: Scrollable room list -->
    <center>
        <ScrollPane fitToWidth="true">
            <TilePane fx:id="roomGrid" hgap="10" vgap="10" prefColumns="2" style="-fx-padding:20;" />
        </ScrollPane>
    </center>

</BorderPane>
